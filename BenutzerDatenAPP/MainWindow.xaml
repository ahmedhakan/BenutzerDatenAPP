<Window x:Class="BenutzerDatenAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BenutzerDatenAPP"
        mc:Ignorable="d"
        Title="Benutzer Daten APP" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <Button Content="Benutzer Hinzufügen" MinWidth="150" Margin ="20,5,0,5" Click="BeimKlickenButton1"/>
            <Button Content="Daten Bearbeiten" MinWidth="150" Margin="20,5,0,5" Click="BeimKlickenButton2"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
